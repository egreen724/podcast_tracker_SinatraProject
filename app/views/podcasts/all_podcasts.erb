<!-- displays all user and a list of podcasts when logged in -->

<h2> Welcome, <%= @user.username%>! </h2>

<a href="/users/<%=@user.slug%>">View Your Podcast List</a>
<a href="/podcasts/new">Add a new podcast</a>

<h3>Feed: </h3>
<h2> <% User.all.each do |user| %> </h2>
<h4>Username: <a href="/users/<%=user.slug%>"><%= user.username %> </a></h4>
<ul> Podcasts:
  <% user.podcasts.each do |podcast| %>
  <li> <a href='/podcast/<%=podcast.slug%>'> <%= podcast.title %> </a> </li>
</ul>
<br>
  <% end %>
<% end %>
