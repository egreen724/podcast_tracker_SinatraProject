<!-- form to add a new podcast if you are logged in -->

<h2>Add a New Podcast:</h2>

<form method = "post" action="/podcasts">
  <label for="name">Podcast Name:</label>
  <input type="text" id="name" name="podcast[name]">
  <label for="description">Description:</label>
  <input type="text" id="description" name="podcast[description]">
  <input type="submit" id="submit" value="submit">
  
</form>
